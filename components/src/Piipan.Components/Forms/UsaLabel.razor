@using System.Linq.Expressions
@using Piipan.Components.Helpers
@using System.ComponentModel.DataAnnotations

@code {
    [CascadingParameter] public UsaFormGroup FormGroup { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public InputStatus Status { get; set; }

    private bool required = false;
}

<label class="usa-label" for="@(FormGroup?.GroupId)-input">
    @ChildContent
    @if (FormGroup?.Required ?? false)
    {
        <span class="usa-required">*</span>
    }
</label>