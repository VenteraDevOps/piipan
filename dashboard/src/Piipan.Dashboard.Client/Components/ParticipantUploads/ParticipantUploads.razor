@using Piipan.Components.Tables
@using Piipan.Dashboard.Client.Models
@using Piipan.Metrics.Api
@using static Piipan.Components.Shared.CommonConstants
@code {
    [Parameter] public ParticipantUploadModel Upload { get; set; } = new();
    [Parameter] public string Token { get; set; }
}

<div class="grid-container margin-bottom-6">
    <a href="/" class="usa-button--unstyled usa-button back-button">
        <svg class="@IconClass" aria-hidden="true" focusable="false" role="img">
            <use xlink:href="/images/sprite.svg#chevron_left"></use>
        </svg>Back to NAC Metrics Dashboard
    </a>
    <h1>SNAP Participant Data Uploads by State</h1>

    <section id="daily-upload-information">
        <ParticipantUploadsStatistics Statistics="Upload.Statistics" />
    </section>
    
    <section id="historical-upload-info">
        <h2>Historical Upload Information</h2>
        <ParticipantUploadsFilter Token="@Token" UploadRequest="Upload.ParticipantUploadFilter" />

        <ParticipantUploadsResults Upload="Upload" />
    </section>
</div>